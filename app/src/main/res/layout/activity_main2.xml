<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:contentDescription="Logo Sabor &amp; Arte"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/title_categorias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categorias"
            android:textColor="@color/accent_gold"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/logo_image"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_categorias"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:chipSpacingHorizontal="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/title_categorias"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_entradas"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entradas (8)"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/card_background"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_principal"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Principal (12)"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/card_background"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_sobremesa"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sobremesa (6)"
                android:textColor="@color/text_primary"
                app:chipBackgroundColor="@color/card_background"/>

        </com.google.android.material.chip.ChipGroup>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_prato"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="12dp"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/chip_group_categorias"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/image_prato"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/risoto"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/text_nome_prato"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Risotto Funghi"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="@id/image_prato"
                    app:layout_constraintStart_toEndOf="@id/image_prato"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <ImageView
                    android:id="@+id/icon_preco"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_attach_money"
                    app:tint="@color/accent_gold"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/text_nome_prato"
                    app:layout_constraintStart_toStartOf="@id/text_nome_prato"/>

                <TextView
                    android:id="@+id/text_preco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$ 45,00"
                    android:textColor="@color/text_secondary"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@id/icon_preco"
                    app:layout_constraintBottom_toBottomOf="@id/icon_preco"
                    app:layout_constraintTop_toTopOf="@id/icon_preco"/>

                <ImageView
                    android:id="@+id/icon_tempo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_timer"
                    app:tint="@color/accent_gold"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/icon_preco"
                    app:layout_constraintStart_toStartOf="@id/icon_preco"/>

                <TextView
                    android:id="@+id/text_tempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 min"
                    android:textColor="@color/text_secondary"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@id/icon_tempo"
                    app:layout_constraintBottom_toBottomOf="@id/icon_tempo"
                    app:layout_constraintTop_toTopOf="@id/icon_tempo"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_qrcode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="12dp"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/card_prato"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/qrcode"
                    android:contentDescription="QR Code para avaliação"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avalie nossa experiência"
                    android:textColor="@color/accent_gold"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>