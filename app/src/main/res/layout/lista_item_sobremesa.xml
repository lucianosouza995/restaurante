<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="12dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageViewDessert_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="Imagem de Pudim de Leite Condensado"
            tools:src="@tools:sample/avatars"/>

        <TextView
            android:id="@+id/textViewName_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/primary_text"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/imageViewDessert_2"
            app:layout_constraintStart_toEndOf="@id/imageViewDessert_2"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Pudim de Leite Condensado"/>

        <TextView
            android:id="@+id/textViewPrice_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/textViewName_2"
            app:layout_constraintStart_toStartOf="@id/textViewName_2"
            tools:text="Preço: R$ 15,00"/>

        <TextView
            android:id="@+id/textViewDescription_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/textViewPrice_2"
            app:layout_constraintStart_toStartOf="@id/textViewName_2"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Clássico pudim de leite cremoso com uma generosa calda de caramelo artesanal."/>

        <View
            android:id="@+id/divider_2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/divider_color"
            app:layout_constraintTop_toBottomOf="@id/imageViewDessert_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/quantity_controls_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/divider_2"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:id="@+id/buttonMinus_2"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_remove"
                android:contentDescription="Diminuir quantidade"/>
            <TextView
                android:id="@+id/textViewQuantity_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="0"
                android:textColor="@color/primary_text"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="0"/>

            <ImageButton
                android:id="@+id/buttonPlus_2"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_add"
                android:contentDescription="Aumentar quantidade"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textViewItemTotal_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Total: R$ 0,00"
            android:textColor="@color/secondary_text"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/buttonAddToCart_2"
            app:layout_constraintEnd_toStartOf="@id/buttonAddToCart_2"
            app:layout_constraintTop_toTopOf="@id/buttonAddToCart_2"
            tools:visibility="invisible"
            tools:text="Total: R$ 0,00"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonAddToCart_2"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adicionar"
            android:textColor="@color/accent_green"
            android:textStyle="bold"
            android:enabled="false"
            app:layout_constraintBottom_toBottomOf="@id/quantity_controls_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/quantity_controls_2"
            tools:text="Adicionar"
            tools:visibility="visible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>